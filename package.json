{
  "name": "marv",
  "version": "0.2.0",
  "description": "Marv - Twitch Bot",
  "repository": "github:onlfait/marv",
  "author": "skarab42 <skarab42@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "app:watch": "electron app/main/index.js -w",
    "app:start": "electron app/main/index.js",
    "app:build": "electron-builder build",
    "client:watch": "rollup -c -w",
    "client:build": "rollup -c",
    "tailwind:build": "node tailwind/build.js",
    "watch": "concurrently -k -n client,app -c magenta,yellow \"yarn client:watch\" \"yarn app:watch\"",
    "build": "yarn tailwind:build --prod && yarn client:build && yarn app:build",
    "prettify": "prettier --write ./app ./client-src",
    "lint": "eslint ./app ./client-src --fix && yarn prettify"
  },
  "build": {
    "productName": "Marv",
    "icon": "app/static/icon.ico"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "capitalize": "^2.0.3",
    "clone-deep": "^4.0.1",
    "concurrently": "^5.3.0",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "eslint": "^7.12.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "i18next": "^19.8.3",
    "i18next-http-backend": "^1.0.21",
    "prettier": "^2.1.2",
    "prettier-plugin-svelte": "^1.4.1",
    "rollup": "^2.32.1",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^6.1.0",
    "rollup-plugin-svelte-svg": "^0.2.3",
    "rollup-plugin-terser": "^7.0.2",
    "socket.io-client": "^2.3.1",
    "svelte": "^3.29.4",
    "svelte-icons": "^2.1.0",
    "tailwindcss": "^1.9.6",
    "uuid": "^8.3.1"
  }
}
