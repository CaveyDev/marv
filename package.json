{
  "name": "marv",
  "version": "0.2.0",
  "description": "Marv - Twitch Bot",
  "repository": "github:onlfait/marv",
  "author": "skarab42 <skarab42@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "app:watch": "electron app/index.js -w",
    "app:start": "electron app/index.js",
    "app:build": "electron-builder build",
    "client:watch": "rollup -c -w",
    "client:build": "rollup -c",
    "tailwind:build": "node tailwind/build.js",
    "watch": "concurrently -k -n app,client -c yellow,magenta \"yarn app:watch\" \"yarn client:watch\"",
    "build": "yarn tailwind:build --prod && yarn client:build && yarn app:build",
    "lint": "eslint ./app ./client-src --fix"
  },
  "build": {
    "productName": "Marv",
    "icon": "app/static/icon.ico"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "concurrently": "^5.3.0",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "eslint": "^7.12.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "rollup": "^2.32.1",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^6.1.0",
    "rollup-plugin-svelte-svg": "^0.2.3",
    "rollup-plugin-terser": "^7.0.2",
    "socket.io-client": "^2.3.1",
    "svelte": "^3.29.4",
    "tailwindcss": "^1.9.6"
  },
  "dependencies": {
    "open": "^7.3.0"
  }
}
